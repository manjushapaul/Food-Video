    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 120
    },
    "subtitle": {
      "type": "text",
      "required": false
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "cta": {
      "type": "string",
      "required": false,
      "maxLength": 80,
      "default": "Get started"
    },
    "ctaLink": {
      "type": "string",
      "required": false,
      "maxLength": 500
    }
  }
}
